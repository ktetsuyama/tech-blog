<div class='text-center'>
  <h5><u>{{title}}</u></h5>
  <h6 class='text-start'>{{opus}}</h6>
  <h7>Created by {{user.name}} on {{format_date date_created}}</h7>
</div>

{{#if loggedIn}}
  {{#if user}}
    {{#ifCond user.id '===' post.user_id}}
      <div class="row">
          <div class="col-md-1">
              <button class="btn btn-sm btn-warning" data-id="{{post.id}}" type="submit">Edit</button>
          </div>
          <div class="col-md-1">
              <button class="btn btn-sm btn-danger" data-id="{{post.id}}" type="submit">DELETE</button>
          </div>
      </div>
    {{/ifCond}}
  {{/if}}
{{/if}}
<div class="mt-5">
  <div>
    <form class='form new-post-comment-form'>
      <div class='form-group'>
        <label for='post-name'>Comment title:</label>
        <input
          class='form-input'
          type='text'
          id='comment-title'
          name='comment-title'
        />
      </div>
      <div class='form-group'>
        <label for='post-body'>Tidbit:</label>
        <textarea
          class='form-input'
          id='comment-tidbit'
          name='comment-tidbit'
        ></textarea>
      </div>
      <div class='form-group'>
        <button type='submit' class='mt-3 btn btn-primary'>Comment?</button>
      </div>
    </form>
  </div>
  {{#if loggedIn}}
  <section class="flex-row justify-center">
    {{> commentList comments=post.comments}}
    </section>
    {{/if}}
</div>

<script src="/js/post.js"></script>